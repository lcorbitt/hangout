              <div id="name-error" class="hidden text-xs text-red mt-1">
                <span class="sr-only">Error:&nbsp;</span>
                Name is required
              </div>
              <div id="name-error" class="text-xs text-gray mt-1">
                <span class="sr-only">Error:&nbsp;</span>
                Your name will be public on your Hangout profile
              </div>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true, class: "w-full h-10 border border-gray-400 rounded-lg px-3 py-2 hover:border-gray-600 outline-none focus:border-viridian" %>

              <div class="w-full flex flex-row items-baseline justify-between">
                <%= f.label :name, "Your name", class: "mb-1 font-medium" %>
              </div>
            </div>

            <div class="w-full relative flex flex-col-reverse">
              <span class="text-gray text-xs mt-1">
                Weâ€™ll use your email address to send you updates
              </span>
